@model Statii
@{  
    Layout = null;  
}  
  
<!DOCTYPE html>  
  
<html>  

<head>  
    <meta name="viewport" content="width=device-width" />  
    <title>Details</title>  
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>  
    <script type="text/javascript" src="@Url.Action("~/scripts/bootstrap.min.js")"></script>  
</head>  
<body>  
    <div class="container-fluid py-4">  
        <h2>Detalii Statie</h2> 
        <h3>Nume: @Model.Nume</h3>
        <h3>Oras: @Model.Oras</h3>
        <h3>Adresa: @Model.Adresa</h3>
        <table class="table table-striped table-bordered">  
            <thead class="bg-dark text-white">  
                <tr>  
                    <th>Numar priza</th>
                    <th>Tip Priza</th>
                    <th>Rezervare</th>
                    
                
                </tr>  
            </thead>  
            <tbody> 
                @foreach (var priza in Model.Prizas)  
                {  
                    <tr> 
                        <td>@priza.IdPriza</td>
                        <td>@priza.IdTipNavigation.Nume</td>  
                        <td> <a asp-controller = "Booking" asp-action="NewBooking" asp-route-idPriza="@priza.IdPriza">Rezervare</a></td>
                    </tr>  
                }  
            </tbody>  
        </table>  
    </div>  
</body>  

<a  asp-controller = "Prize" asp-action="AddPriza" asp-route-idStatie="@Model.IdStatie">Adauga priza</a>

     
</html>  

