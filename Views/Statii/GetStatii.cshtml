@model IEnumerable<Statii>


@{
    ViewData["Title"] = "Statii";
}

<h2>Afisare statii</h2>

<p>
    <a asp-action="Create">Create New</a>
   <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
</p>
<table class="table" id = "myTable">
    <thead>
        <tr>
                <th>
                    <a asp-action="Filter" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Nume)</a>
                </th>
                <th>
                    <a asp-action="Filter" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Oras)</a>
                </th>
                <th>
                    <a asp-action="Filter" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.Adresa)</a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oras)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
               <a asp-action="Edit" asp-route-id="@item.IdStatie">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdStatie">Details</a> |
                <a asp-action="DeleteConfirmation" asp-route-id="@item.IdStatie">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>